{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "@plugin/*": ["src/plugin/*"],
      "@shared/*": ["src/shared/*"]
    },

    "types": ["@figma/plugin-typings"]
  },
  "include": ["src"]
}
